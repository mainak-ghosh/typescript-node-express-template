{
  "name": "typescript-node-express-template",
  "version": "1.0.0",
  "description": "template for node using typescript",
  "main": "index.js",
  "author": "Mainak Ghosh",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --config nodemon.json ./src/index.ts",
    "start:dev": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "start:nodemon": "nodemon",
    "start:prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./build/src/index.js",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.39",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^16.4.10",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.5"
  }
}
